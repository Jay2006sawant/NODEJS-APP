pipeline{
    agent any
    tools{

    }
    stages{
        stage('Git Checkout'){
            steps{
        git branch:'master' , url:"https://github.com/Jay2006sawant/NODEJS-APP.git"
            }
        }
        stage('Install Dependencies'){
            steps{
        bat 'npm install'
            }
        }
        stage('Test'){
            steps{
          bat 'npm test' || echo "No tests defined"
            }
        }
        stage('Build'){
            steps{
                bat 'npm run build'
            }
        }
    }
}