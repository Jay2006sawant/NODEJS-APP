pipeline{
    agent any
    tools{
NodeJS: 'NodeJS'
    }
    stages{
        stage('Git Checkout'){
            steps{
        git branch:'main' , url:"https://github.com/Jay2006sawant/NODEJS-APP.git"
            }
        }
        stage('Install Dependencies'){
            steps{
        bat 'npm install'
            }
        }
         stage('Build Application'){
            steps{
                bat 'npm run build'
                echo 'Build Succesful'
            }
        }
        stage('Test'){
            steps{
          bat 'npm test' 
          echo "No tests defined"
            }
        }
    }
}